{
  "collection": {
    "href": "<%= uri(url_for(:todo_list, id: todo_list_collection.list_id)) %>",
    "items": [<%=
      todo_list_collection.todos.map { |todo_item|
        partial 'todo/todo_item', object: todo_item
      }.join(',')
    %>],
    "links": [
      {
        "rel": "lists",
        "href": "<%= uri(url_for(:root)) %>",
        "prompt": "All Lists"
      }
    ],
    "template": {
      "data": [
        {"name": "title", "value": "", "prompt": "Title"},
        {"name": "notes", "value": "", "prompt": "Notes"},
        {"name": "dueDate", "value": "", "prompt": "Due Date"},
        {"name": "completed", "value": false, "prompt": "Completed"}
      ]
    }
  }
}
